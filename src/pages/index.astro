---
// Component Imports
import Navbar from '../components/Navbar/Navbar.astro';


// Component Script:
// You can write any JavaScript/TypeScript that you'd like here.
// It will run during the build, but never in the browser.
// All variables are available to use in the HTML template below.
let title = 'codeFellowship( ) Podcast';

// Full Astro Component Syntax:
// https://docs.astro.build/core-concepts/astro-components/
---
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width" />

	<title>{title}</title>

	<link rel="icon" type="image/x-icon" href="/favicon.ico" />
	<link href="/dist/output.css" rel="stylesheet" />
	<link href="./src/styles/input.css">
</head>
<body>
	<Navbar />
	<div class="container text-center">
		<h1 class="text-4xl font-medium mb-5 tracking-widest uppercase">
    		Hello World!
  		</h1>
		<h2 class="text-5xl font-extrabold mb-8 uppercase">
			This is my first Tailwind CSS + Astro build project.
		</h2>

		<button class="px-8 py-3 bg-black text-white hover:bg-violet-600 rounded-full">Clicky Button</button>
	</div>
</body>
</html>
